name: GitHub Pages Deploy

on:
  push:
    branches: [main]

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      # Optional: If your site needs Node.js for build steps (e.g., you use a bundler)
      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      # Optional: Install dependencies if you use a package manager (remove if not needed)
      # - name: Install dependencies
      #   run: npm install

      # Optional: Build step (uncomment/edit if your site needs to be built)
      # - name: Build Site
      #   run: npm run build
      #   env:
      #     API_KEY_VALUE: ${{ secrets.API_KEY_VALUE }}

      # If your site is just static HTML/CSS/JS, no build step is needed.
      # By default, GitHub Pages expects static content in the root, or you can specify a folder.

      - name: Deploy to GitHub Pages
        uses: actions/deploy-pages@v4
        with:
          # Set this to the directory to publish. For plain HTML/CSS/JS, use "." for the root.
          publish_dir: .
        env:
          API_KEY_VALUE: ${{ secrets.API_KEY_VALUE }}
