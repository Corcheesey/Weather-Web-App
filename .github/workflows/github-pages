name: github-pages

on:
  push:
    branches: [main]

jobs:
  pages-build-deployment:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      # Example Node.js build - modify these as needed for your stack
      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Install dependencies
        run: npm install

      - name: Build Site
        run: npm run build
        env:
          # Use secret as env variable for build step
          API_KEY_VALUE: ${{ secrets.API_KEY_VALUE }}

      # Deploy built site to GitHub Pages
      - name: Deploy to GitHub Pages
        uses: actions/deploy-pages@v4
        with:
          # Set this to the directory your build outputs to (commonly 'dist' or 'build')
          publish_dir: ./dist
